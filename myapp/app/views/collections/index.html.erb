<div class="books index">
  <h2>Book Collection</h2>

  <%= link_to("Add", new_collection_path, :class => 'action new') %>

  <table class="listing" summary="book list">
    <tr class="header">
      <th>Book</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
    <% if @books.nil? 
    else
     @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td class="center"><%= book.price %></td>
      <td class="center"><%= book.published_date %></td>
      <td class="actions">
        <%= link_to("Show", collection_path(book), :class => 'action show') %>
        <%= link_to("Edit", edit_collection_path(book), :class => 'action edit') %>
        <%= link_to("Delete", delete_collection_path(book), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
    <tr>
    <td>Previous Action:
    <%=  flash.alert %>
    </td>
    </tr>
    <% end %>
  </table>

</div>
